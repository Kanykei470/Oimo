<Window x:Class="Oimo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oimo"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="470" Width="410">
    <Grid Background="CadetBlue" HorizontalAlignment="Left" Width="400">
        <TextBox x:Name="txtBx"
                 Focusable="True"
                 Width="150"
                 Margin="125,110,125,284" 
                 FontSize="20"
                 Text="123456789"
                 TextChanged="txtBx_TextChanged" />

        <Button x:Name="Btn"
                Width="100"
                Content="Run"
                FontSize="20"
                Click="Btn_Click" Margin="150,200,150,199"/>

        <Label x:Name="Lbl"
               FontSize="15" 
               Margin="25,266,25,34" RenderTransformOrigin="0.5,0.5"
               >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.187"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.457"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Grid>
</Window>
